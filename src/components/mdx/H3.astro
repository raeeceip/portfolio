---
import { Icon } from "astro-icon/components";
import { slugify } from "@lib/utils";

let html = await Astro.slots.render("default");
const slugifiedContent = slugify(html);
---

<h3 class="w-max font-bold text-xl relative" id={slugifiedContent} data-section-header>
  <Icon name="tabler:hash" class="text-primary-400 absolute top-[50%] translate-y-[-50%] -left-6 opacity-0" data-section-hash />
  <slot />
</h3>
