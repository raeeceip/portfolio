---
import Tags from "@components/misc/Tags.astro";
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";

export interface Props {
  isPreview?: boolean;
  post: CollectionEntry<"blog">;
}

const {
  post: { data, slug },
  isPreview = false,
} = Astro.props;
---

<style>
  a {
    text-decoration: none;
  }

  time {
    font-size: theme("fontSize.sm");
    font-family: var(--handwriting-font);
    color: theme("colors.primary.600");

    @apply dark:text-primary-400;
  }

  .recipe-card {
    position: relative;
    background-color: rgba(255, 255, 255, 0.7);
    border: 1px solid theme("colors.secondary.300");
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px rgba(81, 115, 63, 0.1);
    overflow: hidden;
    transform: rotate(-0.2deg);
  }
  
  .dark .recipe-card {
    background-color: rgba(58, 77, 48, 0.1);
    border-color: theme("colors.secondary.700");
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1);
  }
  
  .recipe-card:hover {
    transform: translateY(-5px) rotate(0deg);
    box-shadow: 5px 5px 15px rgba(81, 115, 63, 0.15);
  }
  
  .dark .recipe-card:hover {
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2);
  }

  .post-title {
    display: block;
    font-family: var(--header-font-family), var(--alt-font-family), Arial, Helvetica, sans-serif;
    font-size: theme("fontSize.xl");
    font-weight: theme("fontWeight.bold");
    line-height: theme("lineHeight.tight");
    color: theme("colors.primary.700");
    text-decoration: none;
    margin-bottom: theme("margin.4");
    border-bottom: 1px dashed theme("colors.secondary.300");
    padding-bottom: 0.5rem;
    position: relative;

    @apply dark:text-primary-400 dark:border-secondary-700;

    &:hover {
      color: theme("colors.primary.600");
      @apply dark:text-primary-300;
    }
    
    /* Coffee stain for recipe authenticity */
    &::after {
      content: '';
      position: absolute;
      bottom: -30px;
      right: -10px;
      width: 40px;
      height: 40px;
      background: radial-gradient(
        ellipse at center,
        rgba(165, 42, 42, 0.03) 0%,
        rgba(165, 42, 42, 0.05) 50%,
        rgba(165, 42, 42, 0) 70%
      );
      border-radius: 50%;
      transform: rotate(15deg) scale(1.2, 1);
      opacity: 0.7;
      z-index: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
    }
    
    .dark &::after {
      background: radial-gradient(
        ellipse at center,
        rgba(165, 42, 42, 0.06) 0%,
        rgba(165, 42, 42, 0.08) 50%,
        rgba(165, 42, 42, 0) 70%
      );
    }
    
    &:hover::after {
      opacity: 1;
      transform: rotate(5deg) scale(1.5, 1);
    }
  }

  .post-description {
    @apply text-[15px] text-secondary-700 dark:text-secondary-300 leading-relaxed tracking-normal mb-4;
    font-family: var(--body-font-family);
    position: relative;
    z-index: 1;
  }
  
  .corner-fold {
    position: absolute;
    top: 0;
    right: 0;
    width: 0;
    height: 0;
    border-top: 20px solid theme("colors.primary.100");
    border-left: 20px solid transparent;
    border-top-right-radius: 0.5rem;
    transition: all 0.3s ease;
  }
  
  .dark .corner-fold {
    border-top-color: theme("colors.primary.900");
  }
  
  .recipe-card:hover .corner-fold {
    border-top-width: 25px;
    border-left-width: 25px;
  }
  
  /* Tape effect for recipe card */
  .tape-effect {
    position: absolute;
    top: -8px;
    left: 30px;
    width: 80px;
    height: 25px;
    background-color: rgba(255, 255, 255, 0.6);
    transform: rotate(-2deg);
    opacity: 0.6;
    z-index: 2;
    pointer-events: none;
  }
  
  .dark .tape-effect {
    background-color: rgba(255, 255, 255, 0.25);
  }
  
  /* Media queries for mobile responsiveness */
  @media (max-width: 768px) {
    .recipe-card {
      padding: 1.25rem;
    }
    
    .post-title {
      font-size: 1.1rem;
    }
    
    .post-description {
      font-size: 0.9rem;
    }
    
    .tape-effect {
      width: 60px;
      height: 20px;
      left: 20px;
    }
  }
</style>
<div class="recipe-card">
  <div class="corner-fold"></div>
  <a href={"/posts/" + slug} class="post-title">
    {data.title}
    <span class="inline-block ml-2 text-primary-500 dark:text-primary-400 transform -translate-y-1">
      <Icon name="tabler:chef-hat" class="w-4 h-4" />
    </span>
  </a>
  <p class="post-description" class:list={isPreview ? "hidden" : ""}>{data.description}</p>

  <div class="flex items-center justify-between mt-2 flex-wrap gap-2">
    <div class="max-w-[75%]">
      <Tags data={data.tags || []} />
    </div>

    <time datetime={data.date.toISOString()} class="flex items-center">
      <Icon name="tabler:calendar" class="w-4 h-4 mr-1 text-primary-500 dark:text-primary-400" />
      {new Date(data.date).toLocaleDateString("en-US", {year: 'numeric', month: 'short', day: 'numeric'})}
    </time>
  </div>
</div>