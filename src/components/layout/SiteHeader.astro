<style>
  .compact-header {
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(81, 115, 63, 0.3);
    box-shadow: 
      0 5px 15px rgba(81, 115, 63, 0.1),
      0 0 0 1px rgba(81, 115, 63, 0.05);
    border-radius: 0.5rem;
    transition: transform 0.3s ease;
    padding: 1.25rem;
    margin-bottom: 2rem;
    
    /* Notebook paper lines */
    background-image: 
      repeating-linear-gradient(
        transparent,
        transparent 27px,
        var(--notebook-line-color) 27px,
        var(--notebook-line-color) 28px
      );
    background-size: 100% 28px;
  }
  
  .dark .compact-header {
    border-color: rgba(81, 115, 63, 0.4);
    box-shadow: 
      0 5px 15px rgba(0, 0, 0, 0.2),
      0 0 0 1px rgba(81, 115, 63, 0.1);
  }
  
  .compact-header:hover {
    transform: translateY(-3px);
  }
  
  /* Paper clip effect */
  .header-paper-clip {
    position: absolute;
    top: -15px;
    right: 20%;
    width: 30px;
    height: 60px;
    border: 2px solid rgba(160, 160, 160, 0.6);
    border-radius: 5px 5px 0 0;
    border-bottom: none;
    transform: rotate(5deg);
    opacity: 0.8;
    z-index: 3;
  }
  
  .dark .header-paper-clip {
    border-color: rgba(180, 180, 180, 0.4);
  }
  
  /* Main content layout */
  .header-content {
    display: flex;
    align-items: center;
    gap: 1rem;
    position: relative;
    z-index: 2;
  }
  
  /* Logo styling */
  .header-logo {
    background-color: var(--primary-color);
    color: white;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.15);
    border: 2px dashed rgba(255, 255, 255, 0.3);
    position: relative;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }
  
  .header-logo:hover {
    transform: rotate(10deg);
  }
  
  .logo-icon {
    width: 1.75rem;
    height: 1.75rem;
  }
  
  /* Main header area */
  .header-main {
    flex: 1;
  }
  
  .header-title {
    font-family: var(--header-font-family);
    font-size: 1.75rem;
    font-weight: bold;
    color: var(--primary-color);
    margin: 0;
    line-height: 1.1;
  }
  
  .header-subtitle {
    font-family: var(--handwriting-font);
    font-size: 1rem;
    color: theme("colors.primary.600");
    margin-top: 0.25rem;
    transform: rotate(-1deg);
    display: inline-block;
    
    @apply dark:text-primary-400;
  }
  
  /* Quote section */
  .header-quote {
    font-family: var(--header-font-family);
    font-style: italic;
    font-size: 1rem;
    color: theme("colors.secondary.700");
    background-color: rgba(255, 255, 255, 0.5);
    padding: 0.75rem 1rem 0.75rem 1.5rem;
    border-left: 3px solid var(--primary-color);
    margin-top: 0.75rem;
    position: relative;
    border-radius: 0 0.5rem 0.5rem 0;
    max-width: 600px;
    
    @apply dark:text-secondary-300 dark:bg-secondary-900/20;
  }
  
  .header-quote::before {
    content: '"';
    font-size: 2.5rem;
    position: absolute;
    top: -0.75rem;
    left: 0.25rem;
    opacity: 0.1;
    font-family: var(--header-font-family);
  }
  
  /* Social icons */
  .social-links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.75rem;
  }
  
  .social-link {
    color: theme("colors.primary.700");
    transition: transform 0.3s ease, color 0.3s ease;
    display: inline-flex;
    padding: 0.4rem;
    border-radius: 50%;
    background-color: rgba(81, 115, 63, 0.1);
    
    @apply dark:text-primary-400 dark:bg-primary-900/30;
  }
  
  .social-link:hover {
    transform: translateY(-3px);
    color: var(--primary-color);
    background-color: rgba(81, 115, 63, 0.15);
    
    @apply dark:bg-primary-900/40;
  }
  
  .social-icon {
    width: 1.25rem;
    height: 1.25rem;
  }
  
  /* Coffee stain decoration */
  .header-stain {
    position: absolute;
    width: 80px;
    height: 60px;
    bottom: 20px;
    right: 15%;
    background: radial-gradient(
      ellipse at center,
      rgba(139, 69, 19, 0.04) 0%,
      rgba(139, 69, 19, 0.06) 30%,
      rgba(139, 69, 19, 0.02) 70%,
      transparent 90%
    );
    border-radius: 50%;
    transform: rotate(15deg);
    opacity: 0.7;
    z-index: 1;
    pointer-events: none;
  }
  
  /* Mobile responsiveness */
  @media (max-width: 640px) {
    .compact-header {
      padding: 1rem;
    }
    
    .header-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }
    
    .header-logo {
      width: 2.5rem;
      height: 2.5rem;
      margin: 0 auto 0.5rem;
    }
    
    .logo-icon {
      width: 1.5rem;
      height: 1.5rem;
    }
    
    .header-main {
      text-align: center;
      width: 100%;
    }
    
    .header-title {
      font-size: 1.5rem;
    }
    
    .header-subtitle {
      font-size: 0.9rem;
    }
    
    .header-quote {
      font-size: 0.9rem;
      padding: 0.6rem 0.75rem 0.6rem 1.25rem;
      margin: 0.5rem auto 0;
    }
    
    .social-links {
      justify-content: center;
      width: 100%;
    }
    
    .header-stain {
      width: 50px;
      height: 40px;
      bottom: 10px;
      right: 10%;
    }
    
    .header-paper-clip {
      width: 20px;
      height: 40px;
    }
  }
</style>

