<style>
  .recipe-tab {
    position: absolute;
    top: -2rem;
    left: 2.5rem;
    background-color: theme("colors.primary.600");
    color: white;
    padding: 0.5rem 1.5rem;
    font-family: var(--cursive-font);
    font-weight: 600;
    border-radius: 0.5rem 0.5rem 0 0;
    z-index: -1;
    box-shadow: 
      inset 0 -5px 10px rgba(0, 0, 0, 0.1),
      2px -2px 5px rgba(0, 0, 0, 0.05);
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    
    @media (max-width: 768px) {
      left: 1.5rem;
      padding: 0.4rem 1rem;
      font-size: 0.9rem;
    }
  }
  
  .dark .recipe-tab {
    background-color: theme("colors.primary.700");
    box-shadow: 
      inset 0 -5px 10px rgba(0, 0, 0, 0.2),
      2px -2px 5px rgba(0, 0, 0, 0.1);
  }
  
  .tab-icon {
    width: 1.2rem;
    height: 1.2rem;
  }
  
  .sidebar-nav {
    position: sticky;
    top: 24px;
    background-color: rgba(255, 255, 255, 0.7);
    border: 1px solid theme("colors.secondary.300");
    border-radius: 0.5rem;
    padding: 1.25rem;
    box-shadow: 2px 2px 6px rgba(81, 115, 63, 0.1);
    background-image: 
      repeating-linear-gradient(
        transparent,
        transparent 27px,
        rgba(81, 115, 63, 0.05) 27px,
        rgba(81, 115, 63, 0.05) 28px
      );
    background-size: 100% 28px;
    transform: rotate(0.8deg);
    transition: transform 0.3s ease;
  }
  
  .dark .sidebar-nav {
    background-color: rgba(58, 77, 48, 0.1);
    border-color: theme("colors.secondary.700");
    box-shadow: 2px 2px 6px rgba(0, 0, 0, 0.1);
    background-image: 
      repeating-linear-gradient(
        transparent,
        transparent 27px,
        rgba(255, 255, 255, 0.02) 27px,
        rgba(255, 255, 255, 0.02) 28px
      );
  }
  
  .sidebar-nav:hover {
    transform: rotate(0deg);
  }
  
  .sidebar-heading {
    font-family: var(--handwriting-font);
    font-size: 1.2rem;
    color: theme("colors.primary.700");
    margin-bottom: 0.75rem;
    position: relative;
    display: inline-block;
    
    @apply dark:text-primary-400;
    
    &::after {
      content: '';
      position: absolute;
      bottom: -3px;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: theme("colors.primary.400");
      opacity: 0.3;
      border-radius: 1px;
    }
  }
  
  .year-nav {
    border-left: 2px solid theme("colors.primary.200");
    padding-left: 1rem;
    max-height: 200px;
    overflow-y: auto;
    scrollbar-width: thin;
    
    @apply dark:border-primary-800;
    
    /* Style scrollbar for webkit browsers */
    &::-webkit-scrollbar {
      width: 4px;
    }
    
    &::-webkit-scrollbar-track {
      background: rgba(81, 115, 63, 0.05);
      border-radius: 4px;
    }
    
    &::-webkit-scrollbar-thumb {
      background-color: rgba(81, 115, 63, 0.2);
      border-radius: 4px;
    }
    
    .dark &::-webkit-scrollbar-track {
      background: rgba(255, 255, 255, 0.05);
    }
    
    .dark &::-webkit-scrollbar-thumb {
      background-color: rgba(255, 255, 255, 0.1);
    }
  }
  
  .year-link {
    font-family: var(--handwriting-font);
    display: block;
    color: theme("colors.primary.600");
    margin-bottom: 0.5rem;
    position: relative;
    transition: all 0.2s ease;
    transform-origin: left;
    
    @apply dark:text-primary-400;
    
    &:hover {
      color: theme("colors.primary.800");
      transform: scale(1.05);
      
      @apply dark:text-primary-300;
    }
    
    &::before {
      content: 'â€¢';
      position: absolute;
      left: -1.25rem;
      color: theme("colors.primary.500");
      
      @apply dark:text-primary-600;
    }
  }
  
  .subscribe-box {
    margin-top: 1.5rem;
    background-color: rgba(255, 255, 200, 0.2);
    border: 1px dashed theme("colors.primary.400");
    border-radius: 0.5rem;
    padding: 1rem;
    transform: rotate(-0.5deg);
    
    @apply dark:bg-primary-900/10 dark:border-primary-700;
  }
  
  .feed-link {
    display: flex;
    align-items: center;
    font-family: var(--handwriting-font);
    color: theme("colors.primary.600");
    gap: 0.25rem;
    margin-bottom: 0.5rem;
    transition: all 0.2s ease;
    
    @apply dark:text-primary-400;
    
    &:hover {
      color: theme("colors.primary.800");
      transform: translateX(5px);
      
      @apply dark:text-primary-300;
    }
  }
  
  .title-section {
    position: relative;
    margin-bottom: 2rem;
  }
  
  .recipe-title {
    font-family: var(--header-font-family);
    font-weight: 700;
    font-size: 2rem;
    color: theme("colors.primary.700");
    position: relative;
    z-index: 2;
    
    @apply dark:text-primary-300;
  }
  
  /* Recipe stain decorations */
  .recipe-stain {
    position: absolute;
    background: radial-gradient(
      ellipse at center,
      rgba(165, 42, 42, 0.04) 0%,
      rgba(165, 42, 42, 0.06) 50%,
      rgba(165, 42, 42, 0) 70%
    );
    border-radius: 50%;
    z-index: 0;
    pointer-events: none;
  }
  
  .dark .recipe-stain {
    background: radial-gradient(
      ellipse at center,
      rgba(217, 119, 6, 0.1) 0%,
      rgba(193, 105, 6, 0.08) 50%,
      transparent 70%
    );
  }
  
  .stain-1 {
    bottom: 3rem;
    right: 3rem;
    width: 100px;
    height: 100px;
    transform: rotate(12deg) scale(1.2, 1);
  }
  
  .stain-2 {
    top: 25%;
    left: 2rem;
    width: 60px;
    height: 60px;
    transform: rotate(-6deg) scale(0.8, 1);
  }
  
  /* Pagination styles */
  .pagination-container {
    margin-top: 3rem;
    margin-bottom: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }
  
  .pagination-paper {
    background-color: rgba(255, 255, 255, 0.6);
    padding: 0.75rem 1.5rem;
    border-radius: 0.25rem;
    box-shadow: 2px 2px 5px rgba(81, 115, 63, 0.1);
    position: relative;
    z-index: 1;
    border: 1px solid theme("colors.secondary.300");
    display: flex;
    align-items: center;
    gap: 0.5rem;
    
    @apply dark:bg-secondary-900/20 dark:border-secondary-700 dark:shadow-none;
  }
  
  .pagination-info {
    font-family: var(--handwriting-font);
    color: theme("colors.primary.700");
    
    @apply dark:text-primary-300;
  }
  
  .pagination-nav {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: 1rem;
  }
  
  .page-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: 1px solid theme("colors.primary.300");
    color: theme("colors.primary.600");
    transition: all 0.2s ease;
    
    @apply dark:bg-primary-900/10 dark:border-primary-700 dark:text-primary-400;
    
    &:hover {
      background-color: theme("colors.primary.100");
      transform: translateY(-2px);
      
      @apply dark:bg-primary-800/30;
    }
    
    &.active {
      background-color: theme("colors.primary.600");
      border-color: theme("colors.primary.700");
      color: white;
      
      @apply dark:bg-primary-500 dark:border-primary-600;
    }
    
    &.disabled {
      opacity: 0.5;
      cursor: not-allowed;
      
      &:hover {
        transform: none;
        background-color: rgba(255, 255, 255, 0.5);
        
        @apply dark:bg-primary-900/10;
      }
    }
  }
  
  .pagination-paper::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 100%;
    height: 10px;
    background-image: 
      linear-gradient(45deg, transparent 33.333%, var(--notebook-paper-color) 33.333%, var(--notebook-paper-color) 66.667%, transparent 66.667%),
      linear-gradient(-45deg, transparent 33.333%, var(--notebook-paper-color) 33.333%, var(--notebook-paper-color) 66.667%, transparent 66.667%);
    background-size: 14px 10px;
    background-position: 0 -4px;
    filter: drop-shadow(0 2px 2px rgba(0, 0, 0, 0.05));
    z-index: -1;
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .sidebar-nav {
      position: relative;
      top: 0;
      transform: rotate(0);
      margin-bottom: 1.5rem;
    }
    
    .stain-1, .stain-2 {
      display: none;
    }
    
    .pagination-paper {
      padding: 0.5rem 1rem;
      flex-direction: column;
      gap: 0.75rem;
      width: 90%;
    }
    
    .pagination-nav {
      margin-left: 0;
    }
    
    .page-btn {
      width: 2rem;
      height: 2rem;
    }
  }
</style>

<Layout title="Recipe Journal">
  <main class="container px-4 md:px-0">
    <SiteHeader />

    <div class="notebook-page mt-8 relative">
      <div class="recipe-tab">
        <Icon name="tabler:book" class="tab-icon" />
        <span>Journal</span>
      </div>
      
      <div class="flex flex-col md:flex-row gap-10">
        <aside class="md:w-72 flex-shrink-0 order-1 md:order-1">
          <div class="sidebar-nav">
            <h2 class="sidebar-heading">Journal Index</h2>
            <ul class="year-nav">
              {years.map((year) => (
                <li>
                  <a href={`/blog?year=${year}`} class="year-link">
                    {year} Entries ({postsByYear[year].length})
                  </a>
                </li>
              ))}
            </ul>
            
            <div class="subscribe-box">
              <div class="sidebar-heading mb-2">Subscribe:</div>
              <div class="flex flex-col">
                <a href="/rss.xml" class="feed-link">
                  <Icon name="tabler:rss" class="w-4 h-4" />
                  <span>RSS Feed</span>
                </a>
                <a href="/feed.json" class="feed-link">
                  <Icon name="tabler:json" class="w-4 h-4" />
                  <span>JSON Feed</span>
                </a>
              </div>
            </div>
          </div>
        </aside>
        
        <div class="md:flex-1 order-2 md:order-2">
          <div class="title-section">
            <h2 class="recipe-title">My Recipe Journal</h2>
            
            <!-- prettier-ignore -->
            <p class="mt-4 mb-2 leading-relaxed font-handwriting text-lg text-primary-700 dark:text-primary-300">
              I write about things that interest me - from coding techniques to software architecture and design patterns. Feel free to explore by year or subscribe for fresh content!
            </p>
            
            <!-- Current page indicator -->
            <p class="text-sm font-handwriting text-primary-600 dark:text-primary-400">
              Page {validatedPage} of {totalPages} ({totalPosts} recipes total)
            </p>
          </div>
          
          <!-- Current page posts -->
          <ul class="space-y-6 mt-8">
            {paginatedPosts.map((post, index) => (
              <li class={index % 4 === 1 ? "transform rotate-0.5deg" : index % 4 === 3 ? "transform -rotate-0.5deg" : ""}>
                <ArticleListItem post={post} />
              </li>
            ))}
          </ul>
          
          <!-- Pagination controls -->
          <div class="pagination-container">
            <div class="pagination-paper">
              <div class="pagination-info">
                Page {validatedPage} of {totalPages}
              </div>
              
              <div class="pagination-nav">
                <!-- First page button -->
                <a href={getPaginationUrl(1)} class={`page-btn ${validatedPage === 1 ? 'disabled' : ''}`} aria-label="First page" title="First page">
                  <Icon name="tabler:chevrons-left" />
                </a>
                
                <!-- Previous page button -->
                <a href={getPaginationUrl(validatedPage - 1)} class={`page-btn ${validatedPage === 1 ? 'disabled' : ''}`} aria-label="Previous page" title="Previous page">
                  <Icon name="tabler:chevron-left" />
                </a>
                
                <!-- Page indicator -->
                <span class="page-btn active">{validatedPage}</span>
                
                <!-- Next page button -->
                <a href={getPaginationUrl(validatedPage + 1)} class={`page-btn ${validatedPage === totalPages ? 'disabled' : ''}`} aria-label="Next page" title="Next page">
                  <Icon name="tabler:chevron-right" />
                </a>
                
                <!-- Last page button -->
                <a href={getPaginationUrl(totalPages)} class={`page-btn ${validatedPage === totalPages ? 'disabled' : ''}`} aria-label="Last page" title="Last page">
                  <Icon name="tabler:chevrons-right" />
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Recipe stains -->
      <div class="recipe-stain stain-1"></div>
      <div class="recipe-stain stain-2"></div>
    </div>
  </main>
</Layout>