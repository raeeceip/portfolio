---
import Layout from "@layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Recipe Not Found">
  <main>
    <div class="notebook-page mt-12 flex flex-col items-center justify-center py-16">
      <div class="recipe-tab">Lost Recipe</div>
      
      <div class="relative w-full max-w-md mx-auto text-center">
        <h1 class="font-cursive text-8xl text-primary-600 dark:text-primary-300 mb-6 transform -rotate-3">404</h1>
        
        <div class="handwritten text-xl text-primary-700 dark:text-primary-400 mb-6">
          Recipe not found in this cookbook!
        </div>
        
        <p class="mb-8 text-lg">
          The recipe you're looking for seems to be missing from our collection.
        </p>
        
        <a href="/" class="inline-flex items-center gap-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-700 dark:hover:bg-primary-600 text-white py-2 px-6 rounded transition-all transform hover:-rotate-1">
          <Icon name="tabler:home" />
          <span>Return to kitchen</span>
        </a>
        
        <!-- Decorative elements -->
        <div class="absolute -bottom-10 right-0 w-20 h-20 rounded-full bg-primary-100 dark:bg-primary-900/30 opacity-20 transform rotate-12"></div>
        <div class="absolute top-12 -left-10 w-12 h-12 rounded-full bg-accent-200 dark:bg-accent-900/30 opacity-20 transform -rotate-6"></div>
      </div>
      
      <!-- Coffee stain -->
      <div class="absolute bottom-10 left-1/4 w-16 h-16 rounded-full bg-primary-300/20 dark:bg-primary-800/20 transform rotate-3 blur-sm"></div>
    </div>
  </main>
</Layout>

<style>
  .font-cursive {
    font-family: var(--cursive-font);
  }
  
  .handwritten {
    font-family: var(--handwriting-font);
  }
</style>
