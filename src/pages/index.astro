---
import SiteHeader from "@components/layout/SiteHeader.astro";
import Layout from "@layouts/Layout.astro";

import { Icon } from "astro-icon/components";
import { getCollection } from "astro:content";

const MAX_LATEST = 3;

const posts = await getCollection("blog", ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});

const publishedPosts = posts?.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())?.slice(0, MAX_LATEST);

const projects = (await getCollection("projects"))?.[0]?.data?.slice(0, MAX_LATEST);
---

<style>
  .section-title {
    font-family: var(--header-font-family);
    font-weight: 700;
    position: relative;
    display: inline-block;
    margin-bottom: 2rem;
    padding: 0.25rem 0.5rem;
    background-color: theme("colors.primary.600");
    color: white;
    border-radius: 0 0.25rem 0.25rem 0;
    box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.1);
  }
  
  .dark .section-title {
    background-color: theme("colors.primary.700");
    box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.2);
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 0;
    width: 0;
    height: 0;
    border-bottom: 10px solid theme("colors.primary.700");
    border-left: 10px solid transparent;
    z-index: -1;
  }
  
  .dark .section-title::before {
    border-bottom-color: theme("colors.primary.800");
  }
  
  .feature-card {
    position: relative;
    border: 1px solid theme("colors.secondary.300");
    border-radius: 0 0.5rem 0.5rem 0.5rem;
    overflow: visible;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: rgba(255, 255, 255, 0.9);
    box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.1);
    background-image: 
      repeating-linear-gradient(
        theme("colors.secondary.100") 0px,
        theme("colors.secondary.100") 1px,
        transparent 1px,
        transparent 26px
      );
    background-size: 100% 26px;
    padding-top: 26px;
    color: #3A4D30;
  }
  
  .feature-card::before {
    content: "";
    position: absolute;
    top: -0.5rem;
    left: 1.5rem;
    width: 6rem;
    height: 2rem;
    background-color: theme("colors.primary.600");
    border-radius: 0.5rem 0.5rem 0 0;
    z-index: -1;
    box-shadow: inset 0 -5px 10px rgba(0, 0, 0, 0.1);
  }
  
  .feature-card.alt::before {
    background-color: theme("colors.accent.500");
    left: auto;
    right: 1.5rem;
  }
  
  .dark .feature-card {
    border-color: theme("colors.secondary.700");
    background-color: #4a5568;
    background-image: 
      repeating-linear-gradient(
        rgba(255, 255, 255, 0.08) 0px,
        rgba(255, 255, 255, 0.08) 1px,
        transparent 1px,
        transparent 26px
      );
    color: rgba(255, 255, 255, 0.9);
    box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
  }
  
  .feature-card:hover {
    transform: translateY(-3px) rotate(0.5deg);
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  .dark .feature-card:hover {
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.4);
  }
  
  /* Handwritten note style */
  .handwritten {
    font-family: var(--handwriting-font);
    color: theme("colors.primary.700");
    transform: rotate(-1deg);
    position: relative;
    line-height: 1.5;
    font-size: 1.1rem;
  }
  
  .dark .handwritten {
    color: theme("colors.primary.300");
  }
  
  /* Paper clip visual */
  .paper-clip {
    position: absolute;
    top: -10px;
    right: 20px;
    width: 30px;
    height: 60px;
    border: 2px solid theme("colors.accent.500");
    border-radius: 5px 5px 0 0;
    border-bottom: none;
    transform: rotate(45deg);
    opacity: 0.7;
  }
  
  .dark .paper-clip {
    border-color: theme("colors.accent.600");
  }
  
  .skills-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
    gap: 1rem;
  }
  
  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1rem;
    background-color: theme("colors.secondary.50");
    border: none;
    transition: all 0.3s ease;
    position: relative;
    transform: rotate(1deg);
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.05);
  }
  
  .skill-item::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(to right, rgba(81, 115, 63, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(81, 115, 63, 0.1) 1px, transparent 1px);
    background-size: 5px 5px;
    z-index: -1;
  }
  
  .skill-item:nth-child(odd) {
    transform: rotate(-1deg);
  }
  
  .dark .skill-item {
    background-color: rgba(58, 77, 48, 0.3);
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
  }
  
  .dark .skill-item::after {
    background-image: 
      linear-gradient(to right, rgba(255, 255, 255, 0.05) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 1px, transparent 1px);
  }
  
  .skill-item:hover {
    transform: translateY(-3px) rotate(0);
    background-color: rgba(81, 115, 63, 0.1);
    box-shadow: 3px 3px 10px rgba(81, 115, 63, 0.3);
  }
  
  .dark .skill-item:hover {
    background-color: rgba(81, 115, 63, 0.2);
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.3);
  }
  
  .skill-item span {
    margin-top: 0.5rem;
    font-family: var(--handwriting-font);
    font-size: 1.1rem;
  }
  
  .view-more {
    display: inline-block;
    font-weight: 600;
    color: var(--primary-color);
    text-decoration: none;
    transition: transform 0.3s ease;
  }
  
  .view-more:hover {
    transform: translateX(5px);
  }
  
  .special-banner {
    background-color: theme("colors.secondary.50");
    padding: 2rem;
    border-radius: 0.5rem;
    margin: 3rem 0;
    position: relative;
    overflow: hidden;
    box-shadow: 5px 5px 0 rgba(81, 115, 63, 0.3);
    border: 1px solid theme("colors.secondary.300");
    border-left: 4px solid theme("colors.primary.600");
    transform: rotate(-0.5deg);
  }
  
  .dark .special-banner {
    background-color: #3A4D30;
    box-shadow: 5px 5px 0 rgba(0, 0, 0, 0.3);
    border-color: theme("colors.secondary.700");
    border-left-color: theme("colors.primary.600");
  }
  
  .special-banner::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      repeating-linear-gradient(
        rgba(81, 115, 63, 0.05) 0px,
        rgba(81, 115, 63, 0.05) 1px,
        transparent 1px,
        transparent 26px
      );
    background-size: 100% 26px;
    z-index: -1;
  }
  
  .special-banner h3 {
    font-family: var(--handwriting-font);
    font-size: 1.8rem;
    margin-bottom: 1rem;
    transform: rotate(0.5deg);
    color: theme("colors.primary.700");
  }
  
  .dark .special-banner h3 {
    color: var(--primary-color);
  }
  
  .fork-knife {
    position: absolute;
    right: 2rem;
    top: 1rem;
    font-size: 3rem;
    opacity: 0.2;
    transform: rotate(15deg);
  }
</style>

